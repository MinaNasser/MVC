<form method="post" asp-action="SaveEdit" asp-controller="Employee" asp-route-id="@Model.Id" >
    @*<input type="hidden" name="Id" value="@Model.Id" />*@ 
    <div class="mb-3">
        @* <label for="name" class="form-label">Name</label> *@
        @* @Html.LabelFor(em=>em.Name) *@
        <label asp-for="Name"></label>
        @* <input type="text" name="Name" class="form-control" value="@Model.Name" id="Name" > *@
        @* Losly Type   Without @model EmpWithDEptListViewModel*@
        @* @Html.TextBox("Name") *@
        @* @Html.TextBoxFor(e=>e.Name,  *@
        @*       new {@class="form form-control" }) *@


        @* @Html.EditorFor(emp=>emp.Name) *@

        <input type="text" asp-for= "Name" name="Name" class="form-control" value="@Model.Name" id="Name" >


        
    </div>
    <div class="mb-3">
        <label for="Address" class="form-label">Address</label>
        @* <input type="text" name="Address" class="form-control" value="@Model.Address" id="Address" > *@
        @* Strongly Type helper    With @model EmpWithDEptListViewModel*@
        @Html.TextBoxFor(e => e.Address,
                 new { @class = "form form-control" })
    </div>

    <div class="mb-3">
        <label for="ImageURL" class="form-label">ImageUrl</label>
        <input type="file" name="ImageURL" class="form form-control" value="@Model.ImageURL" id="ImageUrl" />
    </div>


    <div class="mb-3">
        <label for="Salary" class="form-label">Salary</label>
        <input type="number" name="Salary" class="form-control" value="@Model.Salary" id="Salary" >
    </div>



    <div class="mb-3">
        <label for="JobTitle" class="form-label">JobTitle</label>
        <input type="text" name="JobTitle" class="form-control" value="@Model.JobTitle" id="JobTitle" >
    </div>



    @* <input type="number" id="DepartmentID" name="DepartmentID" class="form-control" value="@Model.DepartmentID" id="DepartmentID"> *@

    <div class="mb-3">
        <label for="DepartmentID" class="form-label">Department</label>
        <select class="form form-control" id="DepartmentID" name="DepartmentID">
            @foreach (var d in Model.DeptList)
            {
                if(Model.DepartmentID== d.Id)
                {
                    <option value="@d.Id" selected>@d.Name</option>
                }
                  <option value="@d.Id">@d.Name</option>
            }
            
        </select>
    </div>







    <button type="submit" class="btn btn-primary">Save</button>

</form>

