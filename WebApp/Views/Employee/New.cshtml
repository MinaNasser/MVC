
@model Employee 
@{
    ViewData["Title"] = "New";
    SelectList listItems = new SelectList(ViewBag.DeptList,"Id","Name"); 
}

<h1>New</h1>

<form method="post" asp-action="SaveNewEmp" asp-controller="Employee">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
         <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="JobTitle"></label>
        <input class="form form-control " asp-for="JobTitle" />
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="ImageURL"></label>
        <input class="form form-control " asp-for="ImageURL" />
        <span asp-validation-for="ImageURL" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input class="form form-control " asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId" ></label>
        <select class="form form-control " asp-for="DepartmentId" asp-items="listItems">
            <option value="0">--Select Department</option>


        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <button type="submit" value="Create" class="btn btn-success m-5">Create</button>



</form>
<div class="container">

<a asp-action="Index" asp-controller="Employee">Back To List</a>

</div>

