<form action="SaveAdd" method="post" class="mt-4">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model?.Name" id="Name" placeholder="Enter your name">
    </div>
    <div class="mb-3">
        <label for="ManagerName" class="form-label">ManagerName</label>
        <input type="text" name="ManagerName" class="form-control" value="@Model?.ManagerName" id="ManagerName" placeholder="Enter your ManagerName">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
